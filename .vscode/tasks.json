{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "mkdir build -p && cd build && cmake .. && make",
            "problemMatcher": [
                "$nvcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
            }
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "mkdir build-release -p && cd build-release && cmake -DCMAKE_BUILD_TYPE=Release .. && make",
            "problemMatcher": [
                "$nvcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
            }
        },
        {
            "label": "run release",
            "type": "shell",
            "command": "cd build-release && make && ${workspaceFolder}/build-release/raytracing",
            "group": {
                "kind": "test",
                "isDefault": true
            },
        },
        {
            "label": "build current file",
            "type": "shell",
            "command": "nvcc ${file} -o ${fileDirname}/${fileBasenameNoExtension} -g",
            "problemMatcher": [
                "$nvcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}