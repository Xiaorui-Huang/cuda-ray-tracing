{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cd build && cmake .. && make",
            "problemMatcher": [
                "$nvcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
            }
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "cd build_release && cmake -DCMAKE_BUILD_TYPE=Release .. && make",
            "problemMatcher": [
                "$nvcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
            }
        },
        {
            "label": "build current file",
            "type": "shell",
            "command": "nvcc ${file} -o ${fileDirname}/${fileBasenameNoExtension} -g",
            "problemMatcher": [
                "$nvcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}