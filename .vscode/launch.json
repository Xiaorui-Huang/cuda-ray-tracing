{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(CUDA) Launch",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/build/raytracing",
            "cwd": "${workspaceFolder}/build",
            "presentation": {
                "group": "Ray Tracing",
                "order": 1
            },
            "preLaunchTask": "build",
        },
        {
            "name": "(CUDA) Launch release",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/build-release/raytracing",
            "cwd": "${workspaceFolder}/build-release",
            "preLaunchTask": "build release",
            "presentation": {
                "group": "Ray Tracing",
                "order": 2
            },
        },
        {
            "name": "(HOST) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/raytracing",
            "cwd": "${workspaceFolder}/build",
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set disassembly-flavor intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
            ],
            "preLaunchTask": "build"
        },
        {
            "name": "(CUDA Current",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "preLaunchTask": "build current file",
        },
        {
            "name": "(CUDA) Link Current",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "preLaunchTask": "build dynamic parallel current",
        },
    ]
}